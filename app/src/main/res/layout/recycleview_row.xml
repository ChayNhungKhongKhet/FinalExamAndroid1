<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_man_svgrepo_com" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/cardView_image"
        android:fontFamily="sans-serif-medium"
        android:text="Name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/describedTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numStarTxt"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/cardView_image"
        android:fontFamily="sans-serif-medium"
        android:text="Described"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/numStarTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTxt"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/cardView_image"
        android:fontFamily="sans-serif-medium"
        android:text="Star"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/star1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/nameTxt"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/numStarTxt"
        android:src="@drawable/ic__star"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/star2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/nameTxt"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/star1"
        android:src="@drawable/ic__star"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/star3"
        android:layout_width="14dp"
        android:layout_height="18dp"
        android:layout_below="@id/nameTxt"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/star2"
        android:src="@drawable/ic__star"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/star4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/nameTxt"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/star3"
        android:src="@drawable/ic__star"
        android:visibility="invisible" />
</RelativeLayout>